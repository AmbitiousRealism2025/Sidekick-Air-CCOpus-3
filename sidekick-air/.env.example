# Sidekick Air Landing Page - Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# Application Configuration
# ===========================================

# Base URL for the application (used for SEO and social sharing)
NEXT_PUBLIC_APP_URL=https://sidekickair.com

# ===========================================
# Analytics (Optional)
# ===========================================

# Google Analytics Measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Plausible Analytics Domain
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=

# ===========================================
# Email/Waitlist Service (Optional)
# ===========================================

# Email service provider API key (e.g., Mailchimp, ConvertKit, Resend)
EMAIL_SERVICE_API_KEY=

# Waitlist audience/list ID
EMAIL_LIST_ID=

# ===========================================
# Future: Sidekick Care App Integration
# ===========================================

# API URL for Sidekick Care backend
# NEXT_PUBLIC_API_URL=

# ===========================================
# Feature Flags (Optional)
# ===========================================

# Enable/disable features
# NEXT_PUBLIC_ENABLE_ANALYTICS=true
# NEXT_PUBLIC_ENABLE_WAITLIST=true
